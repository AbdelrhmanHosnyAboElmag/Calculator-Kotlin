<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Beige"
    tools:context=".MainActivity"
    android:gravity=""
    android:padding="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <TextView
            android:id="@+id/TvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VALUES"
            android:textColorHint="@color/Teal"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textEnd"
            android:textColor="@color/Teal"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/TvResult"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/TvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RESULT"
            android:textColorHint="@color/Teal"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textColor="@color/Teal"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TableRow
        style="@style/TextViewRow"
        android:layout_gravity="center">

        <TextView

            style="@style/TextViewNumber"
            android:textColor="@color/maroon"
            android:id="@+id/TvAc"
            android:text="AC" />
        <TextView
            style="@style/TextViewNumber"
            android:textColor="@color/maroon"
            android:id="@+id/TvBackSpace"
            android:text="âŒ«"/>
        <TextView
            style="@style/TextViewOperator"
            android:id="@+id/TvDivide"
            android:text="/" />
    </TableRow>
    <TableRow

        style="@style/TextViewRow">

        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber7"
            android:text="7"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber8"
            android:text="8"/>
        <TextView
            style="@style/TextViewNumber"
            android:text="9"
            android:id="@+id/TvNumber9"
            />
        <TextView
            style="@style/TextViewOperator"
            android:id="@+id/TvMul"
            android:text="x"/>
    </TableRow>
    <TableRow
        style="@style/TextViewRow" >

        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber4"
            android:text="4"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber5"
            android:text="5"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber6"
            android:text="6" />
        <TextView
            style="@style/TextViewOperator"
            android:id="@+id/TvMinus"
            android:text="-"/>
    </TableRow>
    <TableRow
        style="@style/TextViewRow" >

        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber1"
            android:text="1"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber2"
            android:text="2"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber3"
            android:text="3" />
        <TextView
            style="@style/TextViewOperator"
            android:id="@+id/TvPlus"
            android:text="+"/>

    </TableRow>
    <TableRow
        style="@style/TextViewRow" >

        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber"
            android:text="."/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvNumber0"
            android:text="0"/>
        <TextView
            style="@style/TextViewNumber"
            android:id="@+id/TvEqual"
            android:layout_weight="2"
            android:textColor="@color/Teal"
            android:textSize="40sp"
            android:text="=" />
    </TableRow>
</TableLayout>